<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_bold_silver</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="textMovieTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="textScoreIDMB">
        <item name="android:textColor">@color/color_silver_score_imdb</item>
        <item name="android:textSize">@dimen/sp_10</item>
    </style>

    <style name="textTitleDetail">
        <item name="android:textColor">@color/color_silver_score_imdb</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="CardViewTheme" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/dp_10</item>
        <item name="cardBackgroundColor">@color/color_back_ground_home</item>
        <item name="cardElevation">@dimen/dp_5</item>
        <item name="android:layout_margin">@dimen/dp_15</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/color_blue_icon</item> <!-- Whatever color you want-->
    </style>
</resources>
