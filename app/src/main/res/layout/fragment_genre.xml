<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:shimmer="http://schemas.android.com/tools" android:id="@+id/layout">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:contentScrim="@color/color_bold_silver"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_250">
                    <ImageView
                            android:id="@+id/imageTrackGenre"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:layout_collapseMode="parallax"
                            android:src="@drawable/action"/>
                </FrameLayout>

                <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbarGenre"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:layout_collapseMode="pin"
                        app:title="@string/title_genres"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:background="@color/color_back_ground_home"
                                               app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerViewContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    shimmer:duration="3000">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="837dp">
                    <include
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/placeholder1"
                            layout="@layout/layout_placeholder_home_movie"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/placeholder2"
                            android:layout_marginTop="32dp"/>
                    <include
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/placeholder2"
                            app:layout_constraintStart_toEndOf="@+id/placeholder1"
                            app:layout_constraintEnd_toEndOf="parent"
                            layout="@layout/layout_placeholder_home_movie"
                            app:layout_constraintBottom_toTopOf="@+id/placeholder4"
                            app:layout_constraintTop_toTopOf="@+id/placeholder1"
                            app:layout_constraintVertical_bias="0.060000002"/>

                    <include
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/placeholder3"
                            layout="@layout/layout_placeholder_home_movie"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/placeholder1"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintEnd_toStartOf="@+id/placeholder4"
                            app:layout_constraintVertical_bias="0.051"/>
                    <include
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/placeholder4"
                            app:layout_constraintStart_toEndOf="@+id/placeholder3"
                            app:layout_constraintEnd_toEndOf="parent"
                            layout="@layout/layout_placeholder_home_movie"
                            app:layout_constraintBottom_toBottomOf="@+id/placeholder3"
                            app:layout_constraintVertical_bias="1.0"
                            app:layout_constraintTop_toBottomOf="@+id/placeholder1"
                            app:layout_constraintHorizontal_bias="0.5"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerGenre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_back_ground_home"
                android:paddingTop="@dimen/dp_16"
                android:visibility="gone"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
